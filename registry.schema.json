{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Nova Token Registry (single file)",
  "type": "object",
  "required": ["version", "chain", "tokens"],
  "properties": {
    "version": { "type": "integer", "minimum": 1 },
    "chain": { "type": "string", "enum": ["nova-mainnet", "nova-testnet"] },
    "updatedAt": { "type": "string", "format": "date-time" },
    "tokens": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "required": ["symbol", "name", "decimals", "mint_authority"],
        "properties": {
          "symbol": { "type": "string", "pattern": "^[A-Z0-9_]{1,16}$" },
          "name": { "type": "string", "minLength": 1, "maxLength": 64 },
          "decimals": { "type": "integer", "minimum": 0, "maximum": 18 },
          "mint_authority": { "type": "string", "pattern": "^nova1[0-9a-z]{10,}$" },
          "logo": { "type": "string", "format": "uri" },
          "uri": { "type": "string", "format": "uri" },
          "extensions": {
            "type": "object",
            "properties": {
              "description": { "type": "string", "maxLength": 280 },
              "website": { "type": "string", "format": "uri" },
              "twitter": { "type": "string", "format": "uri" },
              "discord": { "type": "string", "format": "uri" }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
